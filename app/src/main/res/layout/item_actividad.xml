<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:backgroundTint="?attr/colorSurfaceContainer"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_id_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:  | Nombre: "
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_id_nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_fecha_vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de vencimiento: "/>

            <TextView
                android:id="@+id/tv_prioridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prioridad: "/>

            <TextView
                android:id="@+id/tv_avance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avance: "/>

            <TextView
                android:id="@+id/tv_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: "/>

            <TextView
                android:id="@+id/tv_lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar: "
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/details_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                >

                <Button
                    android:id="@+id/btn_ver_detalles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/verdePrimaryContainer"
                    android:padding="8dp"
                    android:text="Detalles"
                    android:textColor="@color/verdeOnPrimaryContainer"
                    app:icon="@drawable/settings_24px"
                    app:iconGravity="textStart"
                    app:iconTint="@color/verdeOnPrimaryContainer"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_registrar_avance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avance"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textColor="@color/amarilloOnPrimaryContainer"
                    android:backgroundTint="@color/amarilloPrimaryContainer"
                    app:icon="@drawable/add_task_24px"
                    app:iconGravity="textStart"
                    app:iconTint="@color/amarilloOnPrimaryContainer"
                    android:layout_marginStart="8dp"/> <Button
                android:id="@+id/btn_eliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorErrorContainer"
                android:drawableTint="?attr/colorOnErrorContainer"
                android:padding="8dp"
                android:text="Eliminar"
                android:textColor="?attr/colorOnErrorContainer"
                android:textSize="12sp"
                app:icon="@drawable/delete_forever_24px"
                app:iconGravity="textStart"
                app:iconTint="?attr/colorOnErrorContainer"
                android:layout_marginStart="8dp" /> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btn_iniciar_pomodoro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/azulPrimaryContainer"
                    android:padding="8dp"
                    android:text="Pomodoro"
                    android:textColor="@color/azulOnPrimaryContainer"
                    app:icon="@drawable/timer_24px"
                    app:iconTint="@color/azulOnPrimaryContainer"
                    app:iconGravity="textStart"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_iniciar_deep_work"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/celestePrimaryContainer"
                    android:padding="8dp"
                    android:textColor="@color/celesteOnPrimaryContainer"
                    android:text="Deep Work"
                    android:textSize="12sp"
                    app:icon="@drawable/hourglass_24px"
                    app:iconGravity="textStart"
                    app:iconTint="@color/celesteOnPrimaryContainer"
                    android:layout_marginStart="8dp"
                    /> </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>