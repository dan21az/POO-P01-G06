<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/verdeBackground"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloResumen"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resumen Semanal de Sostenibilidad"
            android:textSize="25sp"
            android:textColor="@color/verdeOnSurface"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRangoFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(10/12/2025 - 16/12/2025)"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textColor="@color/verdeOnSurface"
            android:layout_marginBottom="12dp"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/verdeSurface"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia de Acciones"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/verdeOnSurface"
                    android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Acción"
                        android:textColor="@color/verdeOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Veces"
                        android:textColor="@color/verdeOnSurface"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:text="Logro"
                        android:textColor="@color/verdeOnSurface"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/verdeOnSurface"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFrecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="0dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/verdeSurface"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Análisis Ecológico"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/verdeOnSurface"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvDiasConAccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/verdeOnSurface"
                    android:text="Días con al menos 1 acción sostenible: 0 de 0 (0%)"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvDiasCompletos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/verdeOnSurface"
                    android:text="Días con las 4 acciones completas: 0 de 0 (0%)"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Registrar Acciones del Día"
            android:textAllCaps="false"
            android:backgroundTint="@color/verdePrimary"
            android:textColor="@color/verdePrimaryOn" />

    </LinearLayout>
</ScrollView>
