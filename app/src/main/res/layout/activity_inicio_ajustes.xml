<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_ajustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ajustes"
        app:navigationIcon="@drawable/arrow_back_24px"
        android:background="?attr/colorSurface"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_actividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"  android:paddingEnd="16dp"
                android:text="Gestión de Actividades"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnSurface"/>

            <Button
                android:id="@+id/btn_completar_todas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="start|center_vertical"
                android:paddingStart="32dp"  android:text="Completar todas las actividades"
                app:icon="@drawable/pending_actions_24px"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

            <Button
                android:id="@+id/btn_eliminar_completadas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="start|center_vertical"
                app:icon="@drawable/delete_history_24px"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                android:paddingStart="32dp"  android:text="Eliminar Actividades Completadas"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

            <Button
                android:id="@+id/btn_eliminar_todas"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="start|center_vertical"
                app:icon="@drawable/delete_forever_24px"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnErrorContainer"
                android:paddingStart="32dp"  android:text="Eliminar todas (irreversible)"
                android:textColor="?attr/colorOnErrorContainer"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

            <TextView
                android:id="@+id/tv_header_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"  android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:text="Sesiones de Enfoque"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="56dp"
                android:gravity="center_vertical"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mobile_vibrate_24px"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_vibracion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Vibrar al finalizar enfoque/descanso"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_header_otros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="Otros"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnSurface" />

            <Button
                android:id="@+id/btn_acerca_de"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="start|center_vertical"
                app:icon="@drawable/info_24px"
                app:iconPadding="12dp"
                app:iconSize="24dp"
                android:paddingStart="32dp"  android:text="Acerca de la Aplicación"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:iconTint="?attr/colorOnSurfaceVariant"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>