<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainer"
    android:fitsSystemWindows="true"
    tools:context=".vista.actividad.ListaActividades">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Listado de Actividades"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lbl_ordenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ordenar por:"
        app:layout_constraintTop_toTopOf="@id/spinner_ordenar"
        app:layout_constraintBottom_toBottomOf="@id/spinner_ordenar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_filtrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar por:"
        app:layout_constraintTop_toTopOf="@id/spinner_filtro_tipo"
        app:layout_constraintBottom_toBottomOf="@id/spinner_filtro_tipo"
        app:layout_constraintStart_toStartOf="@id/lbl_ordenar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="lbl_ordenar,lbl_filtrar" />

    <Spinner
        android:id="@+id/spinner_ordenar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        style="@style/Widget.AppCompat.Spinner"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/barrier_labels"
        app:layout_constraintEnd_toStartOf="@id/btn_agregar_actividad" />

    <Spinner
        android:id="@+id/spinner_filtro_tipo"
        style="@style/Widget.AppCompat.Spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_agregar_actividad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/barrier_labels"
        app:layout_constraintTop_toBottomOf="@id/spinner_ordenar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_agregar_actividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="130dp"
        android:minHeight="56dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:gravity="center"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:text="AÃ±adir\nactividad"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:icon="@drawable/add_24px"
        app:iconTint="?attr/colorOnPrimaryContainer"
        app:iconGravity="textStart"
        app:iconPadding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/spinner_filtro_tipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_ordenar" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="30dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toBottomOf="@id/spinner_filtro_tipo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.ExtraLarge">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_actividades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:overScrollMode="never"
            tools:listitem="@layout/item_actividad"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
